<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:clickable="true"
        android:layout_margin="8dp"
        android:background="?android:attr/selectableItemBackground" android:id="@+id/courses_table_list_layout_all">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <TextView
                    android:text="Sintra course"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/courses_table_list_layout_name"
                    android:textSize="25sp" android:layout_marginStart="9dp"
                    android:layout_gravity="center_vertical" android:layout_weight="1"
                    android:gravity="center_vertical" android:fontFamily="@font/roboto_thin" android:textStyle="bold"
                    android:layout_marginBottom="10dp" android:layout_marginTop="5dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginBottom="10dp"
                    android:layout_marginStart="13dp" android:weightSum="2">
                <TextView
                        android:text="Lisboa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/courses_table_list_layout_district"
                        android:textSize="22sp" android:layout_marginStart="13dp" android:layout_marginTop="3dp"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center_vertical" android:layout_weight="2"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_star_black_24dp"
                        android:id="@+id/imageView5" android:layout_weight="3"
                        android:layout_gravity="center_vertical"/>
                <TextView
                        android:text=": 4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_weight="2"
                        android:layout_gravity="center_vertical" android:textSize="20sp"
                        android:layout_marginEnd="5dp" tools:text=": 4"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_weight="3"
                        tools:text="|" android:layout_gravity="center_vertical"
                        android:textSize="25sp" android:textStyle="bold" android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/equalizer"
                        android:id="@+id/courses_table_list_layout_difficulty_image"
                        android:adjustViewBounds="false"
                        android:layout_gravity="center_vertical" android:layout_weight="3"/>
                <TextView
                        android:text=": 3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/courses_table_list_layout_difficulty"
                        android:textSize="20sp" android:layout_gravity="center_vertical"
                        android:layout_marginEnd="10dp" android:paddingTop="5dp" android:layout_marginBottom="2dp"
                        android:layout_weight="3"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>