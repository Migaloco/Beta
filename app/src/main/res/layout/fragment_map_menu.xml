<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.MapMenuFragment">

    <com.google.android.gms.maps.MapView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/appMapMenu"/>

    <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/ic_refresh_black_24dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/framgent_map_menu_reset_map" tools:ignore="RtlHardcoded"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dp" android:id="@+id/fragment_map_menu_both">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/fragment_layout_button">
            <ImageView
                    app:srcCompat="@drawable/ic_location_on_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/imageView4" android:paddingTop="10dp"
                    android:paddingBottom="10dp" android:contentDescription="TODO"/>
            <TextView
                    android:text="Checkpoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView3" android:textStyle="bold"
                    android:paddingStart="5dp" android:paddingEnd="5dp" android:paddingBottom="5dp"
                    android:layout_marginTop="5dp"/>
        </LinearLayout>
        <Button
                android:text="Cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/fragment_map_menu_cancel"
                android:layout_margin="15dp"/>
    </LinearLayout>

</FrameLayout>