<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
              android:layout_marginTop="10dp" android:id="@+id/fragment_course_list_layout_full">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="113dp"
                android:layout_height="40dp" app:srcCompat="@drawable/bank_outline"
                android:id="@+id/fragment_course_list_layout_icon"
                android:layout_weight="1" android:layout_gravity="end"/>
        <TextView
                android:text="TextView"
                android:layout_width="337dp"
                android:layout_height="match_parent" android:id="@+id/fragment_course_list_layout_text"
                android:layout_weight="1"
                android:textSize="18sp" android:gravity="center_vertical" android:layout_marginStart="10dp"/>
        <ImageView
                android:layout_width="113dp"
                android:layout_height="40dp" app:srcCompat="@drawable/bank_outline"
                android:id="@+id/fragment_course_list_layout_arrow"
                android:layout_weight="1" android:layout_gravity="end"/>
    </LinearLayout>
</LinearLayout>