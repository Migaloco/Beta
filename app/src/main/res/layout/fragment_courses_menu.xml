<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.CoursesMenuFragment">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/fragment_courses_menu_layout"
            android:background="@drawable/green_background">
        <TextView
                android:text="Categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_courses_menu_title"
                android:textSize="40sp"
                android:gravity="center" android:paddingBottom="20dp" android:paddingTop="20dp"
                android:fontFamily="@font/roboto_medium_italic" android:textColor="#FFFFFF"/>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_courses_menu_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>

</FrameLayout>