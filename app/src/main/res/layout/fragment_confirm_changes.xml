<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".ui.ConfirmChangesFragment" android:gravity="center_horizontal"
              android:background="@drawable/green_background">
    <TextView
            android:text="Please insert password to confirm the changes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium_italic" android:textColor="#FFFFFF" android:textSize="25sp"
            android:layout_marginBottom="50dp" android:gravity="center" android:layout_marginTop="50dp"
            android:id="@+id/fragment_confirm_changes_title"/>

    <com.google.android.material.textfield.TextInputLayout
            app:passwordToggleEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:background="@drawable/white_background"
            android:layout_marginStart="10dp" android:layout_marginEnd="10dp" android:layout_marginBottom="10dp"
            android:paddingStart="20dp" android:id="@+id/id">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:singleLine="true"
                android:hint="Password"
                android:id="@+id/fragment_confirm_changes_password"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            app:passwordToggleEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_background"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="20dp">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="textPassword"
                android:hint="Confirm Password"
                android:id="@+id/fragment_confirm_changes_confirm"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_confirm_changes_submit"
            android:background="@drawable/register_button"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>
</LinearLayout>