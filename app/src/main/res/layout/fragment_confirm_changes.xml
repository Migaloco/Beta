<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".ui.ConfirmChangesFragment" android:gravity="center_horizontal"
              android:background="@drawable/green_background">
    <TextView
            android:text="Please insert password to confirm the changes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium_italic" android:textColor="#FFFFFF" android:textSize="25sp"
            android:layout_marginBottom="50dp" android:gravity="center" android:layout_marginTop="50dp"
            android:id="@+id/fragment_confirm_changes_title"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/fragment_confirm_changes_password" android:background="@drawable/white_background" android:paddingStart="20dp"
            android:layout_marginStart="10dp" android:layout_marginEnd="10dp" android:layout_marginBottom="10dp"
            android:hint="Password"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/fragment_confirm_changes_confirm" android:background="@drawable/white_background" android:paddingStart="20dp"
            android:layout_marginStart="10dp" android:layout_marginEnd="10dp" android:layout_marginTop="10dp"
            android:hint="Confirm Password" android:layout_marginBottom="20dp"/>
    <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/fragment_confirm_changes_submit"
            android:background="@drawable/register_button" android:textSize="20sp" android:layout_marginTop="20dp"/>
</LinearLayout>