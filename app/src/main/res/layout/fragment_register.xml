<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.RegisterFragment" android:id="@+id/fragment_register_layout"
        android:gravity="center"
        app:layout_anchorGravity="center" android:layout_centerHorizontal="false"
        android:background="@drawable/green_background">


    <TextView
            android:text="Register"
            android:layout_width="173dp"
            android:layout_height="40dp"
            android:id="@+id/fragment_register_title" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.136"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.502"
            android:textSize="30sp" android:gravity="center" android:fontFamily="@font/roboto_medium_italic"
            android:textColor="#FFFFFF" android:layout_marginTop="5dp"/>
    <TextView
            android:text="Please create you credentials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_register_info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_register_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.022" app:layout_constraintHorizontal_bias="0.504"
            android:fontFamily="@font/roboto_medium_italic" android:textColor="#FFFFFF" android:textSize="20sp"
            android:layout_margin="20dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/fragment_register_username" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/fragment_other_register_info_email"
            app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintVertical_bias="0.349" android:hint="Username"
            android:fontFamily="@font/roboto_medium_italic" android:textColor="#000000"
            android:background="@drawable/white_background" android:paddingStart="20dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/fragment_register_password" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/fragment_register_username"
            app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintVertical_bias="0.015" android:hint="Password"
            android:fontFamily="@font/roboto_medium_italic" android:textColor="#000000"
            android:background="@drawable/white_background" android:paddingStart="20dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/fragment_register_conf_password"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/fragment_register_password" android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.038" android:hint="Confirm Password"
            android:fontFamily="@font/roboto_medium_italic" android:textColor="#000000"
            android:background="@drawable/white_background" android:paddingStart="20dp"/>
    <Button
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/fragment_register_button"
            android:fontFamily="@font/roboto_medium_italic" android:layout_marginBottom="5dp"
            android:background="@drawable/register_button" android:textSize="20sp"/>
</LinearLayout>